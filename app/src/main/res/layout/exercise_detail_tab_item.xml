    <!-- 3번쨰-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="20dip">

        <TextView
            android:id="@+id/detail_tab_item_tx3"
            style="@style/exercise_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dip"
            android:gravity="left"
            android:text="과체중 215Kcal" />

        <ProgressBar
            android:id="@+id/detail_tab_item_pro3"
            style="@android:style/Widget.ProgressBar.Horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </LinearLayout>

    <!-- 4번쨰 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="20dip">

        <TextView
            android:id="@+id/detail_tab_item_tx4"
            style="@style/exercise_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
