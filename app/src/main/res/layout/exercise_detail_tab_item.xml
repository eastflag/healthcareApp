            android:text="중도비만 215Kcal" />

        <ProgressBar
            android:id="@+id/detail_tab_item_pro4"
            style="@android:style/Widget.ProgressBar.Horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
