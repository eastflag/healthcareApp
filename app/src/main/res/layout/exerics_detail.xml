<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingLeft="15dip"
    android:paddingRight="15dip">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dip"
        android:gravity="center"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/icon_04_body" />

        <TextView
            style="@style/exercise_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="김도진님의 체형 : 정상_269Kcal" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="15dip"
        android:gravity="center"
        android:orientation="horizontal">

        <Button
            android:id="@+id/exercise_detail_top_tx1"
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/exercise_detail_tab_btn_bg"
            android:text="칼로리"
            android:layout_marginRight="2dip"/>

        <Button
            android:id="@+id/exercise_detail_top_tx2"
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/exercise_detail_tab_btn_bg"
            android:text="걸음 수"
            android:layout_marginRight="2dip"/>

        <Button
            android:id="@+id/exercise_detail_top_tx3"
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/exercise_detail_tab_btn_bg"
            android:text="이동거리" />
    </LinearLayout>

    <!-- 중간 그래ㅠㅡ 헤이아웃 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dip">

        <com.github.mikephil.charting.charts.LineChart
            android:id="@+id/chart1"
            android:layout_width="match_parent"
            android:layout_height="260dip"
            />
    </LinearLayout>


    <!-- 하단 레이아웃 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical">

    <!-- 1번쨰 항목 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="1dp"
        >

        <TextView
            android:id="@+id/exercise_detail_bottom_left_tx1"
            android:layout_width="0dip"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:drawableLeft="@drawable/icon_03_km"
            android:drawablePadding="10dp"
            android:background="#d76257"
            android:gravity="center"
            android:text="소모 칼로리"
            style="@style/exercise_text"
            android:padding="5dip"/>

        <TextView
            android:id="@+id/exercise_detail_bottom_right_tx1"
            android:layout_width="0dip"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="#cccfe4"
            android:gravity="center"
            android:text="160Kcal"
            style="@style/exercise_text"
            android:padding="5dip"/>
    </LinearLayout>

    <!-- 2번쨰 항목 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="1dp">

        <TextView
            android:id="@+id/exercise_detail_bottom_left_tx2"
            android:layout_width="0dip"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:drawableLeft="@drawable/icon_03_km"
            android:drawablePadding="10dp"
            android:gravity="center"
            android:background="#d76257"
            android:text="걸음수"
            style="@style/exercise_text"
            android:padding="5dip"/>

        <TextView
            android:id="@+id/exercise_detail_bottom_right_tx2"
            android:layout_width="0dip"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="#cccfe4"
            android:gravity="center"
            android:text="6000"
            style="@style/exercise_text"
            android:padding="5dip"/>
    </LinearLayout>

    <!-- 3번쨰 항목 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="1dp">

        <TextView
            android:id="@+id/exercise_detail_bottom_left_tx3"
            android:layout_width="0dip"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:drawableLeft="@drawable/icon_03_km"
            android:drawablePadding="10dp"
            android:gravity="center"
            android:background="#d76257"
            android:text="이동거리"
            style="@style/exercise_text"
            android:padding="5dip"/>

        <TextView
            android:id="@+id/exercise_detail_bottom_right_tx3"
            android:layout_width="0dip"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="#cccfe4"
            android:gravity="center"
            android:text="4km"
            style="@style/exercise_text"
            android:padding="5dip"/>
    </LinearLayout>


    <!-- 4번쨰 항목 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="1dp">

        <TextView
            android:id="@+id/exercise_detail_bottom_left_tx4"
            android:layout_width="0dip"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:drawableLeft="@drawable/icon_03_km"
            android:drawablePadding="10dp"
            android:gravity="center"
            android:background="#d76257"
            android:text="평균속도"
            style="@style/exercise_text"
            android:padding="5dip"/>

        <TextView
            android:id="@+id/exercise_detail_bottom_right_tx4"
            android:layout_width="0dip"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="#cccfe4"
            android:text="66m/min"
            style="@style/exercise_text"
            android:padding="5dip"/>
    </LinearLayout>


    <!-- 5번쨰 항목 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >

        <TextView
            android:id="@+id/exercise_detail_bottom_left_tx5"
            android:layout_width="0dip"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:drawableLeft="@drawable/icon_03_km"
            android:drawablePadding="10dp"
            android:gravity="center"
            android:background="#d76257"
            android:text="체형"
            style="@style/exercise_text"
            android:padding="5dip"/>

        <TextView
            android:id="@+id/exercise_detail_bottom_right_tx5"
            android:layout_width="0dip"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="#cccfe4"
            android:text="정상"
            style="@style/exercise_text"
            android:padding="5dip"/>
    </LinearLayout>


</LinearLayout></LinearLayout>