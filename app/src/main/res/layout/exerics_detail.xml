<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_margin="10dip"
        >
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/icon_04_body"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="김도진님의 체형 : 정상_269Kcal"
            style="@style/exercise_text"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        >

        <Button
            android:id="@+id/exercise_detail_top_tx1"
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="칼로리"
            android:background="@drawable/exercise_detail_tab_btn_bg"
            />
        <Button
            android:id="@+id/exercise_detail_top_tx2"
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="걸음 수"
            android:background="@drawable/exercise_detail_tab_btn_bg"
            />
        <Button
            android:id="@+id/exercise_detail_top_tx3"
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="이동거리"
            android:background="@drawable/exercise_detail_tab_btn_bg"
            />
    </LinearLayout>


    <!-- 하단 레이아웃 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="#d3d3d3"
        android:gravity="center"
        android:layout_margin="20dip"
        >

        <!-- 1번쨰 항목 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/exercise_detail_bottom_left_tx1"
                android:layout_width="0dip"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:drawableLeft="@drawable/icon_03_km"
                android:drawablePadding="10dp"
                android:text="소모 칼로리"
                android:gravity="center"
                />
            <TextView
                android:id="@+id/exercise_detail_bottom_right_tx1"
                android:layout_width="0dip"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="160Kcal"
                android:gravity="center"
                android:background="#cccfe4"
                />
        </LinearLayout>

        <!-- 2번쨰 항목 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/exercise_detail_bottom_left_tx2"
                android:layout_width="0dip"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:drawableLeft="@drawable/icon_03_km"
                android:drawablePadding="10dp"
                android:text="검음수"
                android:gravity="center"
                />
            <TextView
                android:id="@+id/exercise_detail_bottom_right_tx2"
                android:layout_width="0dip"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="6000"
                android:gravity="center"
                android:background="#cccfe4"
                />
        </LinearLayout>

        <!-- 3번쨰 항목 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/exercise_detail_bottom_left_tx3"
                android:layout_width="0dip"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:drawableLeft="@drawable/icon_03_km"
                android:drawablePadding="10dp"
                android:text="이동거리"
                android:gravity="center"
                />
            <TextView
                android:id="@+id/exercise_detail_bottom_right_tx3"
                android:layout_width="0dip"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="4km"
                android:gravity="center"
                android:background="#cccfe4"
                />
        </LinearLayout>


        <!-- 4번쨰 항목 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/exercise_detail_bottom_left_tx4"
                android:layout_width="0dip"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:drawableLeft="@drawable/icon_03_km"
                android:drawablePadding="10dp"
                android:text="평균속도"
                android:gravity="center"
                />
            <TextView
                android:id="@+id/exercise_detail_bottom_right_tx4"
                android:layout_width="0dip"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="66m/min"
                style="@style/exercise_text"
                android:background="#cccfe4"
                />
        </LinearLayout>


        <!-- 5번쨰 항목 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/exercise_detail_bottom_left_tx5"
                android:layout_width="0dip"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:drawableLeft="@drawable/icon_03_km"
                android:drawablePadding="10dp"
                android:text="체형"
                android:gravity="center"
                android:background="#cccfe4"
                />
            <TextView
                android:id="@+id/exercise_detail_bottom_right_tx5"
                android:layout_width="0dip"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="정상"
                 style="@style/exercise_text"
                android:background="#cccfe4"
                />
        </LinearLayout>


    </LinearLayout>
</LinearLayout>