<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tl="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <TextView
        android:id="@+id/txt_my_body_type"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="나의 체형 : "
        android:textSize="18sp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="3dip"
        />
    <TextView
        android:id="@+id/txt_my_body_calorie"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="나의 칼로리 : "
        android:textSize="18sp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="3dip"
        />

    <com.flyco.tablayout.SegmentTabLayout
        android:id="@+id/exercise_detail_tab"
        android:layout_width="match_parent"
        android:layout_height="36dp"
        android:layout_marginTop="10dp"
        android:paddingLeft="25dp"
        android:paddingRight="25dp"
        tl:tl_bar_color="#ffffff"
        tl:tl_indicator_anim_enable="true"
        tl:tl_indicator_color="#434241"
        tl:tl_indicator_margin_bottom="2dp"
        tl:tl_indicator_margin_left="2dp"
        tl:tl_indicator_margin_right="2dp"
        tl:tl_indicator_margin_top="2dp"/>

    <android.support.v4.view.ViewPager
        android:id="@+id/exercise_detail_tab_pager"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>
</LinearLayout>