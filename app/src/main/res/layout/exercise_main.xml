<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white">

    <!--상단 레이아웃-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dip"
        android:layout_gravity="center_horizontal"
        android:orientation="horizontal"
        android:gravity="center_horizontal"
        >
        <ImageButton
            android:id="@+id/exercise_date_prev"
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:src="@drawable/arrow_l"
            android:background="@android:color/transparent"
            android:layout_gravity="left|center_vertical"
            android:layout_margin="8dp"
            />

        <TextView
            android:id="@+id/exercise_date_txt"
            style="@style/exercise_text_white"
            android:layout_width="0dip"
            android:layout_height="match_parent"
            android:layout_weight="3"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="2016.03.10(목)"
            android:textSize="20dp"
            android:textStyle="bold"
            android:gravity="center"
            android:textColor="@color/black"
            />
        <ImageButton
            android:id="@+id/exercise_date_next"
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:src="@drawable/arrow_r"
            android:background="@android:color/transparent"
            android:layout_gravity="right|center_vertical"
            android:layout_margin="8dp"
            />
    </LinearLayout>


    <!--중간레라우웃-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dip"
        android:layout_weight="3"
        android:padding="4dip"
        android:orientation="horizontal"
        android:weightSum="10">

        <!--왼쪽 이미지-->
        <LinearLayout
            android:layout_width="0dip"
            android:layout_height="match_parent"
            android:layout_weight="5.5"
            android:orientation="vertical"
            android:layout_margin="10dip"
            >
            <TextView
                android:id="@+id/exercise_left_top_txt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="축구"
                android:textStyle="bold"
                android:textColor="#0d3367"
                android:textSize="24dp"
                />

            <ImageView
                android:id="@+id/exercise_left_img"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerInside"
                android:src="@drawable/pic_football"
                android:padding="10dip"/>
        </LinearLayout>


        <!--오른쪽 텍스트-->
        <LinearLayout
            android:layout_width="0dip"
            android:layout_height="match_parent"
            android:layout_weight="4.5"
            android:orientation="vertical"
            android:gravity="center"

            >
            <!-- 칼로리 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:background="#8d99c3"
                android:padding="5dip"
                >

                <ImageView
                    android:layout_width="50dip"
                    android:layout_height="50dip"
                    android:src="@drawable/icon_kcal"

                    />
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:gravity="center"
                    >

                    <TextView
                        style="@style/exercise_text_white"
                        android:layout_width="match_parent"
                        android:layout_height="0dip"
                        android:layout_weight="1"
                        android:text="소모칼로리"
                        android:textStyle="bold"
                        />

                    <TextView
                        android:id="@+id/exercise_right_txt_1"
                        style="@style/exercise_text_white"
                        android:layout_width="match_parent"
                        android:layout_height="0dip"
                        android:layout_weight="1"
                        android:text="240 Kcal"
                        android:textStyle="bold"
                        />
                </LinearLayout>
            </LinearLayout>

            <!-- 걸음수 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#6d779b"
                android:orientation="horizontal"
                android:padding="5dip">

                <ImageView
                    android:layout_width="50dip"
                    android:layout_height="50dip"
                    android:src="@drawable/icon_step"
                    />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:gravity="center">

                    <TextView
                        style="@style/exercise_text_white"
                        android:layout_width="match_parent"
                        android:layout_height="0dip"
                        android:layout_weight="1"
                        android:text="걸음수"
                        android:textStyle="bold"
                        />

                    <TextView
                        android:id="@+id/exercise_right_txt_2"
                        style="@style/exercise_text_white"
                        android:layout_width="match_parent"
                        android:layout_height="0dip"
                        android:layout_weight="1"
                        android:text="6000 보"
                        android:textStyle="bold"
                        />
                </LinearLayout>
            </LinearLayout>


            <!-- 이동 거리 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#61657c"
                android:orientation="horizontal"
                android:padding="5dip">

                <ImageView
                    android:layout_width="50dip"
                    android:layout_height="50dip"
                    android:src="@drawable/icon_km" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <TextView
                        style="@style/exercise_text_white"
                        android:layout_width="match_parent"
                        android:layout_height="0dip"
                        android:layout_weight="1"
                        android:text="이동거리"
                        android:textStyle="bold"
                        />

                    <TextView
                        android:id="@+id/exercise_right_txt_3"
                        style="@style/exercise_text_white"
                        android:layout_width="match_parent"
                        android:layout_height="0dip"
                        android:layout_weight="1"
                        android:text="4.05 km"
                        android:textStyle="bold"
                        />
                </LinearLayout>
            </LinearLayout>

            <!-- 체형 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#484b5f"
                android:orientation="horizontal"
                android:padding="5dip">

                <ImageView
                    android:layout_width="50dip"
                    android:layout_height="50dip"
                    android:src="@drawable/icon_body" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <TextView
                        style="@style/exercise_text_white"
                        android:layout_width="match_parent"
                        android:layout_height="0dip"
                        android:layout_weight="1"
                        android:text="체형"
                        android:textStyle="bold"
                        />

                    <TextView
                        android:id="@+id/exercise_right_txt_4"
                        style="@style/exercise_text_white"
                        android:layout_width="match_parent"
                        android:layout_height="0dip"
                        android:layout_weight="1"
                        android:text="정상"
                        android:textStyle="bold"
                        android:textColor="#F6CA03"
                        />


                </LinearLayout>
            </LinearLayout>

        </LinearLayout>

    </LinearLayout>




    <!--하단 레이아웃-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dip"
        android:layout_weight="3"
        android:weightSum="10"
        android:orientation="horizontal"
        android:padding="4dp">

        <!--하단 왼쪽-->
        <LinearLayout
            android:layout_width="0dip"
            android:layout_height="match_parent"
            android:layout_weight="5"
            android:orientation="vertical"
            android:padding="10dp"

            android:layout_marginRight="5dip"
            android:background="@drawable/stroke_bg"
            >

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="내랭킹"
                android:textSize="36sp"
                android:gravity="center"
                android:textStyle="bold"
                android:layout_marginBottom="15dp"
                />

            <!--반등-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:baselineAligned="true"
                android:orientation="horizontal"
                >
                <TextView
                    android:id="@+id/exercise_class_text"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:textSize="22dp"
                    android:text="반"
                    android:textStyle="bold"
                    android:layout_gravity="left|center_vertical"
                    android:width="46dp"
                    android:gravity="center_vertical|right"
                    />

                <TextView
                    android:id="@+id/exercise_class_number"
                    style="@style/exercise_text"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="100등"
                    android:layout_gravity="right"
                    android:gravity="right"
                    android:textColor="#ED4929"
                    android:textSize="40dp"
                    android:textStyle="bold"/>

            </LinearLayout>

            <!--학년등-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:baselineAligned="true"
                android:orientation="horizontal"
                android:layout_marginTop="20dp"
                >
                <TextView
                    android:id="@+id/exercise_student_text"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:textSize="22dp"
                    android:text="학년"
                    android:textStyle="bold"
                    android:layout_gravity="left|center_vertical"
                    android:width="46dp"
                    android:gravity="center_vertical|right"
                    />

                <TextView
                    android:id="@+id/exercise_student_number"
                    style="@style/exercise_text"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="100등"
                    android:layout_gravity="right"
                    android:gravity="right"
                    android:textColor="#ED4929"
                    android:textSize="40dp"
                    android:textStyle="bold"/>

            </LinearLayout>


            <!--종목-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="60dip"
                android:orientation="vertical"
                android:visibility="gone"
                >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="35dip"
                    android:orientation="horizontal"
                    android:gravity="bottom">

                    <TextView
                        android:id="@+id/exercise_entries_text"
                        android:layout_width="110dip"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/exercise_student_text"
                        android:gravity="left"
                        android:text="종목 "
                        style="@style/exercise_text"
                        />

                    <TextView
                        android:id="@+id/exercise_entries_number"
                        style="@style/exercise_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="2583"
                        android:textColor="#d60700" />

                    <TextView
                        android:id="@+id/exercise_entries_no"
                        style="@style/exercise_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="등"
                        />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>

        <!--하단 오른쪽 -->
        <LinearLayout
            android:layout_width="0dip"
            android:layout_height="match_parent"
            android:layout_weight="5"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@drawable/stroke_bg"
                android:gravity="center"
                android:padding="10dip">
                <TextView
                    android:id="@+id/exercise_average_text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="정상 260Kcal"
                    android:textSize="20dp"
                    android:textStyle="bold"
                    style="@style/exercise_text"
                    />
                <ProgressBar
                    android:id="@+id/exercise_average_prog"
                    android:layout_width="match_parent"
                    android:layout_height="20dip"
                    style="@android:style/Widget.ProgressBar.Horizontal"
                    android:layout_marginTop="10dip"
                    android:layout_marginBottom="10dip"
                    />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center"
                    >
                    <TextView
                        android:id="@+id/exercise_average_sub_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="20 kcal"
                        android:textSize="16dp"
                        android:textStyle="bold"
                        />
                    <ImageView
                        android:id="@+id/exercise_average_sub_img"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:background="@drawable/arrow_down"

                        />

                </LinearLayout>
                <ImageButton
                    android:id="@+id/btn_exercise_detail"
                    android:layout_width="match_parent"
                    android:layout_height="50dip"
                    android:contentDescription="상세보기버튼"
                    android:textColor="@color/white"
                    android:background="@drawable/btn_detail"
                    android:layout_marginTop="18dp"
                    android:layout_marginBottom="10dp" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center">
                <ImageButton
                    android:id="@+id/btn_exercise_history"
                    android:layout_width="165dp"
                    android:layout_height="55dp"
                    android:contentDescription="히스토리 버튼"
                    android:background="@drawable/btn_history"
                    android:scaleType="center"
                    android:paddingTop="10dp" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>