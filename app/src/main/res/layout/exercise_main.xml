<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <!--상단 레이아웃-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dip"
        android:background="@color/white"

        android:layout_gravity="center_horizontal"
        android:orientation="horizontal"
        android:gravity="center_horizontal"
        >
        <ImageButton
            android:layout_width="0dip"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:src="@drawable/arrow_l"
            android:background="@android:color/transparent"
            android:layout_gravity="left"/>

        <TextView
            android:id="@+id/exercise_date_txt"
            style="@style/exercise_text_white"
            android:layout_width="0dip"
            android:layout_height="match_parent"
            android:layout_weight="3"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="2016.03.10(목)"
            android:textSize="28sp"
            android:gravity="center"
            android:textColor="@color/black"
            />
        <ImageButton
            android:layout_width="0dip"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:src="@drawable/arrow_r"
            android:background="@android:color/transparent"
            />
    </LinearLayout>


    <!--중간레라우웃-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dip"
        android:layout_weight="3"
        android:padding="10dip"
        >

        <!--왼쪽 이미지-->
        <LinearLayout
            android:layout_width="0dip"
            android:layout_height="match_parent"
            android:layout_weight="5.5"
            android:orientation="vertical"
            android:layout_margin="10dip"
            >
            <TextView
                android:id="@+id/exercise_left_top_txt"
                android:layout_width="match_parent"
                android:layout_height="50dip"
                android:text="축구"
                android:textStyle="bold"
                android:textColor="#0d3367"
                android:textSize="30sp"
                android:layout_marginTop="10dip"
                android:layout_marginLeft="30dip"
                />

            <ImageView
                android:id="@+id/exercise_left_img"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/pic_football"
                android:padding="10dip"/>
        </LinearLayout>


        <!--오른쪽 텍스트-->
        <LinearLayout
            android:layout_width="0dip"
            android:layout_height="match_parent"
            android:layout_weight="4.5"
            android:orientation="vertical"
            android:gravity="center"

            >
            <!-- 칼로리 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:background="#6d779b"
                android:padding="5dip"
                >

                <ImageView
                    android:layout_width="50dip"
                    android:layout_height="50dip"
                    android:src="@drawable/icon_01_kcal"

                    />
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <TextView
                        style="@style/exercise_text_white"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="소모칼로리" />

                    <TextView
                        android:id="@+id/exercise_right_txt_1"
                        style="@style/exercise_text_white"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="240 Kcal" />
                </LinearLayout>
            </LinearLayout>

            <!-- 걸음수 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#61657c"
                android:orientation="horizontal"
                android:padding="5dip">

                <ImageView
                    android:layout_width="50dip"
                    android:layout_height="50dip"
                    android:src="@drawable/icon_02_foot"
                    />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <TextView
                        style="@style/exercise_text_white"
                        android:layout_width="match_parent"
                        android:layout_height="0dip"
                        android:layout_weight="1"
                        android:text="걸음수" />

                    <TextView
                        android:id="@+id/exercise_right_txt_2"
                        style="@style/exercise_text_white"
                        android:layout_width="match_parent"
                        android:layout_height="0dip"
                        android:layout_weight="1"
                        android:text="6000 보" />
                </LinearLayout>
            </LinearLayout>


            <!-- 이동 거리 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#6d779b"
                android:orientation="horizontal"
                android:padding="5dip">

                <ImageView
                    android:layout_width="50dip"
                    android:layout_height="50dip"
                    android:src="@drawable/icon_03_km" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <TextView
                        style="@style/exercise_text_white"
                        android:layout_width="match_parent"
                        android:layout_height="0dip"
                        android:layout_weight="1"
                        android:text="이동거리" />

                    <TextView
                        android:id="@+id/exercise_right_txt_3"
                        style="@style/exercise_text_white"
                        android:layout_width="match_parent"
                        android:layout_height="0dip"
                        android:layout_weight="1"
                        android:text="4.05 km" />
                </LinearLayout>
            </LinearLayout>

            <!-- 체형 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#484b5f"
                android:orientation="horizontal"
                android:padding="5dip">

                <ImageView
                    android:layout_width="50dip"
                    android:layout_height="50dip"
                    android:src="@drawable/icon_04_body" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <TextView
                        style="@style/exercise_text_white"
                        android:layout_width="match_parent"
                        android:layout_height="0dip"
                        android:layout_weight="1"
                        android:text="페형" />

                    <TextView
                        android:id="@+id/exercise_right_txt_4"
                        style="@style/exercise_text_white"
                        android:layout_width="match_parent"
                        android:layout_height="0dip"
                        android:layout_weight="1"
                        android:text="정상" />


                </LinearLayout>
            </LinearLayout>

        </LinearLayout>

    </LinearLayout>




    <!--하단 레이아웃-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dip"
        android:layout_weight="3"
        >
        <!--하단 왼쪽-->
        <LinearLayout
            android:layout_width="0dip"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical"
            android:padding="10dip"

            android:layout_margin="5dip"
            android:background="@drawable/stroke_bg"
            android:gravity="center"
            >
            <!--반등-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="60dip"
                android:orientation="vertical"
                >
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="35dip"
                    android:orientation="horizontal"
                    android:gravity="bottom"
                    >
                    <TextView
                        android:id="@+id/exercise_class_text"
                        style="@style/exercise_text"
                        android:layout_width="120dip"
                        android:layout_height="wrap_content"
                        android:gravity="left"
                        android:text="반" />

                    <TextView
                        android:id="@+id/exercise_class_number"
                        style="@style/exercise_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="10"
                        android:textColor="#d60700" />

                    <TextView
                        android:id="@+id/exercise_class_no"
                        android:layout_width="20dip"
                        android:layout_height="wrap_content"
                        android:gravity="right"
                        android:text="등"
                        android:textSize="16sp" />
                </LinearLayout>
                <ProgressBar
                    android:layout_width="match_parent"
                    android:layout_height="20dip"
                    android:gravity="bottom"
                    style="@android:style/Widget.ProgressBar.Horizontal"
                    />
            </LinearLayout>

            <!--학년등-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="60dip"
                android:orientation="vertical"
                >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="35dip"
                    android:orientation="horizontal"
                    android:gravity="bottom">

                    <TextView
                        android:id="@+id/exercise_student_text"
                        style="@style/exercise_text"
                        android:layout_width="120dip"
                        android:layout_height="wrap_content"
                        android:gravity="left"
                        android:text="학년" />

                    <TextView
                        android:id="@+id/exercise_student_number"
                        style="@style/exercise_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="250"
                        android:textColor="#d60700" />

                    <TextView
                        android:id="@+id/exercise_student_no"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="등" />
                </LinearLayout>
                <ProgressBar
                    android:layout_width="match_parent"
                    android:layout_height="20dip"
                    android:gravity="bottom"
                    style="@android:style/Widget.ProgressBar.Horizontal"
                    />
            </LinearLayout>

            <!--종목-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="60dip"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="35dip"
                    android:orientation="horizontal"
                    android:gravity="bottom">

                    <TextView
                        android:id="@+id/exercise_entries_text"
                        android:layout_width="110dip"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/exercise_student_text"
                        android:gravity="left"
                        android:text="종목 "
                        style="@style/exercise_text"
                        />

                    <TextView
                        android:id="@+id/exercise_entries_number"
                        style="@style/exercise_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="2583"
                        android:textColor="#d60700" />

                    <TextView
                        android:id="@+id/exercise_entries_no"
                        style="@style/exercise_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="등"
                        />
                </LinearLayout>
                <ProgressBar
                    android:layout_width="match_parent"
                    android:layout_height="20dip"
                    android:gravity="bottom"
                    style="@android:style/Widget.ProgressBar.Horizontal"
                    />
            </LinearLayout>
        </LinearLayout>

        <!--하단 오른쪽 -->
        <LinearLayout
            android:layout_width="0dip"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical"
            android:layout_margin="10dip"
            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="180dp"
                android:orientation="vertical"
                android:padding="10dip"
                android:background="@drawable/stroke_bg"
                android:gravity="center"
                >
                <TextView
                    android:id="@+id/exercise_average_text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="정상 -260Kcal"
                    style="@style/exercise_text"
                    />
                <ProgressBar
                    android:id="@+id/exercise_average_prog"
                    android:layout_width="match_parent"
                    android:layout_height="20dip"
                    style="@android:style/Widget.ProgressBar.Horizontal"
                    android:layout_marginTop="10dip"
                    android:layout_marginBottom="10dip"
                    />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center"
                    >
                    <TextView
                        android:id="@+id/exercise_average_sub_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="20 kcal"
                        android:textSize="16sp"
                        />
                    <ImageView
                        android:id="@+id/exercise_average_sub_img"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/arrow_down"
                        />

                </LinearLayout>
                <Button
                    android:id="@+id/btn_exercise_detail"
                    android:layout_width="match_parent"
                    android:layout_height="50dip"
                    android:text="상세"
                    android:textColor="@color/white"
                    android:background="#f41814"
                    />
            </LinearLayout>

            <Button
                android:id="@+id/btn_exercise_history"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="나의 History"
                android:background="#3026e4"
                android:textColor="@color/white"
                android:layout_margin="10dip"
                />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>