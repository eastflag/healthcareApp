<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <!--상단 레이아웃-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dip"
        android:layout_weight="1"
        android:background="@color/white"

        android:layout_gravity="center_horizontal"
        android:orientation="horizontal"
        android:gravity="center_horizontal"
        >
        <ImageButton
            android:layout_width="0dip"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:src="@drawable/arrow_l"
            android:layout_gravity="left"/>

        <TextView
            android:layout_width="0dip"
            android:layout_height="match_parent"
            android:layout_weight="3"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="2016.03.10(목)"
            android:gravity="center"
            android:textColor="@color/black"
            />
        <ImageButton
            android:layout_width="0dip"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:src="@drawable/arrow_r"
            />
    </LinearLayout>


    <!--중간레라우웃-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dip"
        android:layout_weight="3"
        >

        <!--왼쪽 이미지-->
        <LinearLayout
            android:layout_width="0dip"
            android:layout_height="match_parent"
            android:layout_weight="6"
            android:orientation="vertical"
            >
            <TextView
                android:layout_width="match_parent"
                android:layout_height="50dip"
                android:text="축구"
                android:textColor="#0d3367"
                android:textSize="30sp"
                android:layout_marginTop="10dip"
                android:layout_marginLeft="30dip"
                />

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/pic_football"
                android:padding="10dip"/>
        </LinearLayout>


        <!--오른쪽 텍스트-->
        <LinearLayout
            android:layout_width="0dip"
            android:layout_height="match_parent"
            android:layout_weight="4"
            android:orientation="vertical"
            >
            <!-- 칼로리 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:background="#6d779b"
                >

                <ImageView
                    android:layout_width="40dip"
                    android:layout_height="40dip"
                    android:src="@drawable/icon_01_kcal"

                    />
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <TextView
                        style="@style/exercise_text"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="소모칼로리" />

                    <TextView
                        style="@style/exercise_text"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="240 Kcal" />
                </LinearLayout>
            </LinearLayout>

            <!-- 걸음수 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#61657c"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="40dip"
                    android:layout_height="40dip"
                    android:src="@drawable/icon_02_foot"
                    />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <TextView
                        style="@style/exercise_text"
                        android:layout_width="match_parent"
                        android:layout_height="0dip"
                        android:layout_weight="1"
                        android:text="걸음수" />

                    <TextView
                        style="@style/exercise_text"
                        android:layout_width="match_parent"
                        android:layout_height="0dip"
                        android:layout_weight="1"
                        android:text="6000 보" />
                </LinearLayout>
            </LinearLayout>


            <!-- 이동 거리 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#6d779b"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="40dip"
                    android:layout_height="40dip"
                    android:src="@drawable/icon_03_km" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <TextView
                        style="@style/exercise_text"
                        android:layout_width="match_parent"
                        android:layout_height="0dip"
                        android:layout_weight="1"
                        android:text="이동거리" />

                    <TextView
                        style="@style/exercise_text"
                        android:layout_width="match_parent"
                        android:layout_height="0dip"
                        android:layout_weight="1"
                        android:text="4.05 km" />
                </LinearLayout>
            </LinearLayout>

            <!-- 체형 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#484b5f"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="40dip"
                    android:layout_height="40dip"
                    android:src="@drawable/icon_04_body" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <TextView
                        style="@style/exercise_text"
                        android:layout_width="match_parent"
                        android:layout_height="0dip"
                        android:layout_weight="1"
                        android:text="페형" />

                    <TextView
                        style="@style/exercise_text"
                        android:layout_width="match_parent"
                        android:layout_height="0dip"
                        android:layout_weight="1"
                        android:text="정상" />


                </LinearLayout>
            </LinearLayout>

        </LinearLayout>

    </LinearLayout>




    <!--하단 레이아웃-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dip"
        android:layout_weight="3"
        android:background="#765756"
        >
        <!--하단 왼쪽-->
        <RelativeLayout
            android:layout_width="0dip"
            android:layout_height="match_parent"
            android:layout_weight="1"
           android:background="#8623c6"
            >
            <!--반등-->
            <TextView
                 android:id="@+id/class_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="반 등 "
                style="@style/exercise_text"
                />
            <TextView
                android:id="@+id/class_no"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="10"
                android:textColor="#ffffff"
                android:textSize="16sp"
                android:layout_toRightOf="@id/class_text"
                />

            <!--학년등-->
            <TextView
                android:id="@+id/student_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="학년 등 "
                style="@style/exercise_text"
                android:layout_below="@id/class_text"
                />
            <TextView
                android:id="@+id/student_no"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="250"
                android:textColor="#ffffff"
                android:textSize="16sp"
                android:layout_toRightOf="@id/student_text"
                android:layout_below="@id/class_no"
                />


            <!--종목-->
            <TextView
                android:id="@+id/entries_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="종목 "
                style="@style/exercise_text"
                android:layout_below="@id/student_text"
                />
            <TextView
                android:id="@+id/entries_no"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="달리기"
                android:textColor="#ffffff"
                android:textSize="16sp"
                android:layout_toRightOf="@id/entries_text"
                android:layout_below="@id/student_no"
                />
        </RelativeLayout>

        <!--하단 오른쪽 -->
        <LinearLayout
            android:layout_width="0dip"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical"
            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="158dp"
                android:orientation="vertical"
                android:padding="15dip">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="정상 -260Kcal"
                    style="@style/exercise_text"
                    />
                <ProgressBar
                    android:layout_width="match_parent"
                    android:layout_height="20dip"
                    style="@android:style/Widget.ProgressBar.Horizontal"
                    android:layout_marginTop="10dip"
                    android:layout_marginBottom="10dip"
                    />
                <Button
                    android:layout_width="match_parent"
                    android:layout_height="40dip"
                    android:text="상세"
                    android:background="#3026e4"
                    />
            </LinearLayout>

            <Button
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="나의 History"
                android:background="#d1e426"
                android:layout_margin="10dip"
                />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>