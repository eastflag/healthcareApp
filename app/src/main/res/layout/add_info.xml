<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center_horizontal"
    >

    <ImageButton
        android:id="@+id/add_info_btn1"
        android:layout_width="320dp"
        android:layout_height="100dp"
        android:background="@drawable/btn_mobile"
        android:contentDescription="심리검사"
        android:layout_marginTop="20dp"
       />

    <ImageButton
        android:id="@+id/add_info_btn2"
        android:layout_width="320dp"
        android:layout_height="100dp"
        android:background="@drawable/btn_momentum"
        android:layout_marginTop="20dp"
        android:contentDescription="운동량 확인"
         />

    <Button
        android:id="@+id/add_info_btn3"
        android:layout_width="270dp"
        android:layout_height="60dp"
        android:background="@drawable/btn_bg"
        android:layout_marginTop="40dip"
        android:shadowColor="#A8A8A8"
        android:shadowDx="0"
        android:shadowDy="0"
        android:shadowRadius="5"
        android:text="그만두기"
        android:textColor="#FFFFFF"
        android:textSize="30sp"
        android:visibility="gone"/>


</LinearLayout>